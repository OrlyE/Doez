@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-color: rgba(238, 239, 240, 0.56);
        height: 800px;
    }
    .hithabrut {
        width: 700px;
        height: 600px;
        background-color: rgb(38, 170, 194);
        float: right;
        margin-right: 150px;
        border-radius: 2px;
        margin-top: 10px;
        /* border: solid 2px; */
        border-color: rgb(35, 112, 196);
        margin-top: 100px;
        box-shadow: 4px 4px 1px #D5D5D5;
    }
        .hithabrut input {
     
            
        }
        .hithabrut h3 {
            float: right;
            color: white;
            font-family: -webkit-pictograph;
            margin-right: 15px;
            font-size: 30px;
        }
    .pratim-head {
        height: 100px;
        font-size: 25px;
        /* box-shadow: rgb(88, 189, 236) 2px 2px 1px; */
        border-bottom: solid 1px;
        border-radius: 5px;
        border-color: rgb(228, 230, 233);
        background-color: rgb(23, 160, 185);
    }
    .pratim-btn {
        float: left;
        margin-left: 70px;
    }
    .pratim-input {
        height: 350px;
        width: 600px;
    }
        .pratim-input input {
            margin-right: 10px;
            width: 350px;
            float: right;
            margin-top: 30px;
            height: 30px;
            border-radius: 5px;
            position: static;
            font-size: 15px;
            text-align: center;
        }
    .pratim-btn button {
        width: 90px;
        height: 30px;
        border-radius: 6px;
        /* border: solid 2px; */
        font-family: -webkit-pictograph;
        font-size: 20px;
        /* border-color: blue; */
        background: white;
        color: rgb(107, 106, 106);
        margin-top: 40px;
    }
    .taknon {
        width: 300px;
        height: 40px;
        float: right;
        margin-right: 80px;
    }
        .taknon input {
          
            float:right;
        }
        .taknon td {
            float: right;
            color: rgb(219, 219, 219);
        }
    .pratim-head img {
        margin-top: 20px;
        margin-right: 5px;
    }
</style>

<body>
    <div class="hithabrut">
        <div class="pratim-head"> 
            <img src="images/registration_icon.png " height="50" width="50" style="float:right" />      
            <h3>:משתמש חדש,הכנס פרטים</h3>  
                    
        </div>
                
        <div class="pratim-input">
                         
                 <input placeholder="שם פרטי" />                                  
               <input placeholder="שם משפחה" />
                <input placeholder="אימייל" />
               <input placeholder="סיסמה" />
                <input placeholder="חזור שנית על הסיסמה" />           
        </div>
        <div class="taknon">
            <table>
                <tr>
                    <td colspan="2">
                        <input type="checkbox" height="20" />  קראתי את
                         <a href=""> תקנון האתר</a>
    ,
    ואני מאשר את תוכנו
</td>
                </tr>
            </table>
        </div>
               
        <div class="pratim-btn">
            <button>הרשמה</button>
        </div> 
       
    </div>
</body>

